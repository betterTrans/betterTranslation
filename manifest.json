{
    "name": "betterTranslation",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "更好的翻譯外掛工具。",
    "content_scripts": [ {
        "matches": ["<all_urls>"],
        "css": ["css/content.css"],
        "js": [
            "js/storage.js",
            "js/sentTag.js",
            "js/content.js"
        ]
    } ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "options_page": "popup/popup.html",
    "options_ui": {
        "page": "popup/popup.html",
        "open_in_tab": false
    },
    "permissions": [
        "storage"
    ]
}